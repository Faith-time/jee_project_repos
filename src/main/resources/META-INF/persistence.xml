<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_2.xsd"
             version="3.1">

    <persistence-unit name="gestionLocationPU" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <!-- Déclaration de toutes les entités -->
        <class>sn.team.gestion_loc_immeubles.Entities.Utilisateur</class>
        <class>sn.team.gestion_loc_immeubles.Entities.Locataire</class>
        <class>sn.team.gestion_loc_immeubles.Entities.Proprietaire</class>
        <class>sn.team.gestion_loc_immeubles.Entities.Administrateur</class>
        <class>sn.team.gestion_loc_immeubles.Entities.Immeuble</class>
        <class>sn.team.gestion_loc_immeubles.Entities.Unite</class>
        <class>sn.team.gestion_loc_immeubles.Entities.Contrat</class>
        <class>sn.team.gestion_loc_immeubles.Entities.Paiement</class>

        <properties>
            <!-- Configuration de la connexion PostgreSQL -->
            <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/immeubles_location_db"/>
            <property name="jakarta.persistence.jdbc.user" value="postgres"/>
            <property name="jakarta.persistence.jdbc.password" value="pgpass"/>

            <!-- Configuration Hibernate -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
            <property name="hibernate.use_sql_comments" value="true"/>

            <!-- Configuration pour éviter les warnings -->
            <property name="hibernate.connection.autocommit" value="false"/>
            <property name="hibernate.connection.pool_size" value="5"/>

            <!-- Configuration pour le debug -->
            <property name="hibernate.generate_statistics" value="true"/>
        </properties>
    </persistence-unit>
</persistence>